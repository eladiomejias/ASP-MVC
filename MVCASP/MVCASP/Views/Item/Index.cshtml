@model IEnumerable<MVCASP.Models.Person>

<h1>Index - Items</h1>

@if (Model.Count() > 0)
{
    <a type="button" class="btn btn-primary mt-3" asp-controller="Item" asp-action="Create">Agregar elemento</a>

    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var person in Model)
            {
                <!--<h3>
                    #person.fName
                </h3>-->

            <tr>
                <th scope="row">@person.Id</th>
                <td>@person.fName</td>
                <td>@person.lName</td>
                <td><a asp-action="Update" asp-route-Id="@person.Id" class="btn btn-primary">Actualizar</a></td>
                <td><a asp-action="Delete" asp-route-Id="@person.Id" class="btn btn-danger">Eliminar</a></td>

            </tr>

            }

        </tbody>
    </table>


}
else
{

    <button type="button" class="btn btn-primary" asp-controller="Item" asp-action="Create">Agregar elemento</button>

    <p>There's no data</p>
}

