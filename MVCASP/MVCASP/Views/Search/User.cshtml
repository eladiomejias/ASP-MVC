@model MVCASP.Models.Person

@{
    ViewData["Title"]="Busqueda Usuario ";
}

<h2 class="mt-5">
    Listado de personas obtenidas
</h2>

    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <th scope="row">@Model.Id</th>
                    <td>@Model.fName</td>
                    <td>@Model.lName</td>
                </tr>
        </tbody>
    </table>

    <button class="btn btn-outline-info m-3 p-2" asp-action="Index">
        Volver
    </button>
